<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/background"
        >



        <Button
            android:id="@+id/buttonPerExit"
            android:layout_width="120dp"
            android:layout_height="35dp"
            android:text="خروج"
            android:textColor="@color/colorWhite"
            android:background="@drawable/redus"
            android:backgroundTint="@color/colorAllCities"
            android:textSize="15dp"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"/>



        <Button
            android:id="@+id/buttonPerSetting"
            android:layout_width="120dp"
            android:layout_height="35dp"
            android:text="الاعدادات"
            android:textColor="@color/colorWhite"
            android:background="@drawable/redus"
            android:backgroundTint="@color/colorAllCities"
            android:textSize="15dp"
            android:onClick="button"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"/>


        <Button
            android:id="@+id/buttonPerAccount"
            android:layout_width="120dp"
            android:layout_height="35dp"
            android:text="حسابي"
            android:textColor="@color/colorWhite"
            android:background="@drawable/redus"
            android:backgroundTint="@color/colorAllCities"
            android:textSize="15dp"
            android:layout_marginLeft="12dp"
            android:onClick="button1"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"/>

    </LinearLayout>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="60dp">


    <FrameLayout
        android:id="@+id/fragment_container5"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1" />



</LinearLayout>

</RelativeLayout>