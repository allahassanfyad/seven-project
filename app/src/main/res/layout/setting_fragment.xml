<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background">




    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="15dp">

        <androidx.cardview.widget.CardView
            android:id="@+id/view2"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_centerHorizontal="true"
            android:elevation="12dp"
            android:innerRadius="0dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="70dp"
            android:layout_marginBottom="20dp"
            android:shape="ring"
            android:thicknessRatio="1.9"
            app:cardCornerRadius="40dp">

            <ImageView
                android:id="@+id/profilePhoto"
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:src="@drawable/vila"
                android:scaleType="centerCrop"/>


        </androidx.cardview.widget.CardView>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="15dp">

        <TextView
            android:id="@+id/textName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="hesham"
            android:textSize="15dp"
            android:textColor="@color/colorSaudi"
            android:layout_gravity="right"
            android:textStyle="bold"
            android:layout_marginRight="95dp"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="15dp"/>

        <TextView
            android:id="@+id/textCharge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="الرصيد الحالي"
            android:textSize="15dp"
            android:textColor="@color/colorSaudi"
            android:layout_gravity="right"
            android:textStyle="bold"
            android:layout_marginRight="80dp"
            android:layout_marginBottom="15dp"/>

    </LinearLayout>

    <TextView
        android:id="@+id/textAmount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginTop="100dp"
        android:layout_marginLeft="295dp"
        android:layout_marginBottom="15dp"
        android:text=" 60"
        android:textColor="@color/colorSaudi"
        android:textSize="20dp"
        android:textStyle="bold" />


    <ImageView
        android:layout_width="42dp"
        android:layout_height="42dp"
        android:src="@drawable/ryal"
        android:layout_marginTop="95dp"
        android:layout_marginLeft="255dp"/>
    
    
    <Button
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="150dp"
        android:textColor="@color/colorPrimaryDark"
        android:backgroundTint="@color/colorAllCities"
        android:text="تعديل الملف الشخصي"/>
    


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="189dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:orientation="horizontal"
            android:layoutDirection="rtl">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="الاسم"
                android:textColor="@color/colorSaudi"
                android:textStyle="bold"
                android:textSize="17dp"
                android:layout_marginStart="45dp"
                android:padding="5dp"/>

            <EditText
                android:id="@+id/editText"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:inputType="text"
                android:text="hesham"
                android:paddingRight="10dp"
                android:textColorHint="@color/colorDarkGray"
                android:textColor="@color/colorBlack"
                android:gravity="right"
                android:layout_gravity="center"
                android:background="@android:drawable/editbox_background"
                android:backgroundTint="@color/colorWhite"
                android:layout_marginLeft="32dp"
                android:layout_marginRight="18dp"
                android:layout_marginBottom="5dp"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:orientation="horizontal"
            android:layoutDirection="rtl">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="الجوال"
                android:textColor="@color/colorSaudi"
                android:textStyle="bold"
                android:textSize="17dp"
                android:layout_marginStart="45dp"
                android:padding="5dp"/>

            <EditText
                android:id="@+id/editText1"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:inputType="text"
                android:text="66666666"
                android:paddingRight="10dp"
                android:textColorHint="@color/colorDarkGray"
                android:textColor="@color/colorBlack"
                android:gravity="right"
                android:layout_gravity="center"
                android:background="@android:drawable/editbox_background"
                android:backgroundTint="@color/colorWhite"
                android:layout_marginLeft="32dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="5dp"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:orientation="horizontal"
            android:layoutDirection="rtl">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="الصورة"
                android:textColor="@color/colorSaudi"
                android:textStyle="bold"
                android:textSize="17dp"
                android:layout_marginStart="45dp"
                android:padding="5dp"/>

            <EditText
                android:id="@+id/editText2"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:inputType="text"
                android:hint="اختر صورة جديدة"
                android:paddingRight="10dp"
                android:textColorHint="@color/colorDarkGray"
                android:textColor="@color/colorBlack"
                android:gravity="right"
                android:layout_gravity="center"
                android:background="@android:drawable/editbox_background"
                android:backgroundTint="@color/colorWhite"
                android:layout_marginLeft="32dp"
                android:layout_marginRight="9dp"
                android:layout_marginBottom="5dp"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:orientation="horizontal"
            android:layoutDirection="rtl">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="كلمة المرور"
                android:textColor="@color/colorSaudi"
                android:textStyle="bold"
                android:textSize="17dp"
                android:layout_marginStart="27dp"
                android:padding="5dp"/>

            <EditText
                android:id="@+id/editText3"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:inputType="numberPassword"
                android:text="55555555555555"
                android:paddingRight="10dp"
                android:textColorHint="@color/colorDarkGray"
                android:textColor="@color/colorBlack"
                android:gravity="right"
                android:layout_gravity="center"
                android:background="@android:drawable/editbox_background"
                android:backgroundTint="@color/colorWhite"
                android:layout_marginLeft="32dp"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="5dp"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:orientation="horizontal"
            android:layoutDirection="rtl">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="المدينة"
                android:textColor="@color/colorSaudi"
                android:textStyle="bold"
                android:textSize="17dp"
                android:layout_marginStart="45dp"
                android:padding="5dp"/>

            <EditText
                android:id="@+id/editText4"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:inputType="text"
                android:text="الرياض"
                android:paddingRight="10dp"
                android:textColorHint="@color/colorDarkGray"
                android:textColor="@color/colorBlack"
                android:gravity="right"
                android:layout_gravity="center"
                android:background="@android:drawable/editbox_background"
                android:backgroundTint="@color/colorWhite"
                android:layout_marginLeft="32dp"
                android:layout_marginRight="12dp"
                android:layout_marginBottom="5dp"
                />
        </LinearLayout>

        <Button
            android:layout_width="130dp"
            android:layout_height="22dp"
            android:text="حفظ التعديلات"
            android:background="@drawable/redus"
            android:layout_gravity="center"
            android:backgroundTint="@color/colorAllCities"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="10dp"/>


    </LinearLayout>


</RelativeLayout>