<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background">


    <info.hoang8f.android.segmented.SegmentedGroup
        xmlns:segmentedgroup="http://schemas.android.com/apk/res-auto"
        android:id="@+id/segmented2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="horizontal"
        segmentedgroup:sc_border_width="2dp"
        segmentedgroup:sc_corner_radius="10dp">

        <RadioButton
            android:id="@+id/btn1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/redus"
            android:text="المنتهية"
            android:layout_weight="1"
            style="@style/RadioButton"/>

        <RadioButton
            android:id="@+id/btn2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="كل الاعلانات"
            style="@style/RadioButton" />

        <RadioButton
            android:id="@+id/btn3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="البيانات"
            android:checked="true"
            style="@style/RadioButton" />


    </info.hoang8f.android.segmented.SegmentedGroup>


    <RelativeLayout
        android:id="@+id/relativeAccount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <androidx.cardview.widget.CardView
                android:id="@+id/view2"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="70dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:elevation="12dp"
                android:innerRadius="0dp"
                android:shape="ring"
                android:thicknessRatio="1.9"
                app:cardCornerRadius="40dp">

                <ImageView
                    android:id="@+id/profilePhoto"
                    android:layout_width="80dp"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/vila" />


            </androidx.cardview.widget.CardView>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginTop="12dp"
                android:layout_marginRight="95dp"
                android:layout_marginBottom="15dp"
                android:text="hesham"
                android:textColor="@color/colorSaudi"
                android:textSize="15dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textCharge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginRight="80dp"
                android:layout_marginBottom="15dp"
                android:text="الرصيد الحالي"
                android:textColor="@color/colorSaudi"
                android:textSize="15dp"
                android:textStyle="bold" />

        </LinearLayout>

        <TextView
            android:id="@+id/textAmount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginLeft="295dp"
            android:layout_marginTop="80dp"
            android:layout_marginBottom="15dp"
            android:text=" 60"
            android:textColor="@color/colorSaudi"
            android:textSize="20dp"
            android:textStyle="bold" />


        <ImageView
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:layout_marginLeft="255dp"
            android:layout_marginTop="75dp"
            android:src="@drawable/ryal" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="130dp"
            android:orientation="vertical">


            <EditText
                android:id="@+id/editText"
                android:layout_width="match_parent"
                android:layout_height="33dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="15dp"
                android:layout_marginBottom="5dp"
                android:background="@android:drawable/editbox_background"
                android:backgroundTint="@color/colorWhite"
                android:gravity="right"
                android:inputType="text"
                android:paddingRight="10dp"
                android:text="الاسم : hesham "
                android:textColor="@color/colorSaudi"
                android:textColorHint="@color/colorDarkGray" />

            <EditText
                android:id="@+id/editText1"
                android:layout_width="match_parent"
                android:layout_height="33dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginBottom="5dp"
                android:background="@android:drawable/editbox_background"
                android:backgroundTint="@color/colorWhite"
                android:gravity="right"
                android:inputType="text"
                android:paddingRight="10dp"
                android:text="الجوال : 666666666"
                android:textColor="@color/colorSaudi"
                android:textColorHint="@color/colorDarkGray" />

            <EditText
                android:id="@+id/editText2"
                android:layout_width="match_parent"
                android:layout_height="33dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginBottom="5dp"
                android:background="@android:drawable/editbox_background"
                android:backgroundTint="@color/colorWhite"
                android:gravity="right"
                android:inputType="text"
                android:paddingRight="10dp"
                android:text="البريد الالكتروني : o.o@o.o"
                android:textColor="@color/colorSaudi"
                android:textColorHint="@color/colorDarkGray" />

            <EditText
                android:id="@+id/editText3"
                android:layout_width="match_parent"
                android:layout_height="33dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginBottom="5dp"
                android:background="@android:drawable/editbox_background"
                android:backgroundTint="@color/colorWhite"
                android:gravity="right"
                android:inputType="text"
                android:paddingRight="10dp"
                android:text="المدينة : الرياض"
                android:textColor="@color/colorSaudi"
                android:textColorHint="@color/colorDarkGray" />

            <EditText
                android:id="@+id/editText4"
                android:layout_width="match_parent"
                android:layout_height="33dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginBottom="5dp"
                android:background="@android:drawable/editbox_background"
                android:backgroundTint="@color/colorWhite"
                android:gravity="right"
                android:inputType="text"
                android:paddingRight="10dp"
                android:text="البلد : السعودية"
                android:textColor="@color/colorSaudi"
                android:textColorHint="@color/colorDarkGray" />

        </LinearLayout>

    </RelativeLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rcyAccount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:listitem="@layout/all_ads_personal"
        android:visibility="invisible"/>

</LinearLayout>
