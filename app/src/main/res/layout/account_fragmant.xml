<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background">




    <info.hoang8f.android.segmented.SegmentedGroup
        xmlns:segmentedgroup="http://schemas.android.com/apk/res-auto"
        android:id="@+id/segmented2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="horizontal"
        segmentedgroup:sc_border_width="2dp"
        segmentedgroup:sc_corner_radius="10dp">

        <RadioButton
            android:id="@+id/button21"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="One"
            style="@style/RadioButton" />

        <RadioButton
            android:id="@+id/button22"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Two"
            style="@style/RadioButton" />
    </info.hoang8f.android.segmented.SegmentedGroup>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="65dp">

        <androidx.cardview.widget.CardView
            android:id="@+id/view2"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_centerHorizontal="true"
            android:elevation="12dp"
            android:innerRadius="0dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="70dp"
            android:layout_marginBottom="20dp"
            android:shape="ring"
            android:thicknessRatio="1.9"
            app:cardCornerRadius="40dp">

            <ImageView
                android:id="@+id/profilePhoto"
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:src="@drawable/vila"
                android:scaleType="centerCrop"/>


        </androidx.cardview.widget.CardView>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="65dp">

        <TextView
            android:id="@+id/textName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="hesham"
            android:textSize="15dp"
            android:textColor="@color/colorSaudi"
            android:layout_gravity="right"
            android:textStyle="bold"
            android:layout_marginRight="95dp"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="15dp"/>

        <TextView
            android:id="@+id/textCharge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="الرصيد الحالي"
            android:textSize="15dp"
            android:textColor="@color/colorSaudi"
            android:layout_gravity="right"
            android:textStyle="bold"
            android:layout_marginRight="80dp"
            android:layout_marginBottom="15dp"/>

    </LinearLayout>

    <TextView
        android:id="@+id/textAmount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginTop="150dp"
        android:layout_marginLeft="295dp"
        android:layout_marginBottom="15dp"
        android:text=" 60"
        android:textColor="@color/colorSaudi"
        android:textSize="20dp"
        android:textStyle="bold" />


    <ImageView
        android:layout_width="42dp"
        android:layout_height="42dp"
        android:src="@drawable/ryal"
        android:layout_marginTop="145dp"
        android:layout_marginLeft="255dp"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="200dp"
        android:orientation="vertical">


        <EditText
            android:id="@+id/editText"
            android:layout_width="match_parent"
            android:layout_height="33dp"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="5dp"
            android:background="@android:drawable/editbox_background"
            android:backgroundTint="@color/colorWhite"
            android:gravity="right"
            android:text="الاسم : hesham "
            android:inputType="text"
            android:paddingRight="10dp"
            android:textColor="@color/colorSaudi"
            android:textColorHint="@color/colorDarkGray" />

        <EditText
            android:id="@+id/editText1"
            android:layout_width="match_parent"
            android:layout_height="33dp"
            android:inputType="text"
            android:text="الجوال : 666666666"
            android:paddingRight="10dp"
            android:textColorHint="@color/colorDarkGray"
            android:textColor="@color/colorSaudi"
            android:gravity="right"
            android:background="@android:drawable/editbox_background"
            android:backgroundTint="@color/colorWhite"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="5dp"
            />

        <EditText
            android:id="@+id/editText2"
            android:layout_width="match_parent"
            android:layout_height="33dp"
            android:inputType="text"
            android:text="البريد الالكتروني : o.o@o.o"
            android:paddingRight="10dp"
            android:textColorHint="@color/colorDarkGray"
            android:textColor="@color/colorSaudi"
            android:gravity="right"
            android:background="@android:drawable/editbox_background"
            android:backgroundTint="@color/colorWhite"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="5dp"
            />

        <EditText
            android:id="@+id/editText3"
            android:layout_width="match_parent"
            android:layout_height="33dp"
            android:inputType="text"
            android:text="المدينة : الرياض"
            android:paddingRight="10dp"
            android:textColorHint="@color/colorDarkGray"
            android:textColor="@color/colorSaudi"
            android:gravity="right"
            android:background="@android:drawable/editbox_background"
            android:backgroundTint="@color/colorWhite"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="5dp"
            />

        <EditText
            android:id="@+id/editText4"
            android:layout_width="match_parent"
            android:layout_height="33dp"
            android:inputType="text"
            android:text="البلد : السعودية"
            android:paddingRight="10dp"
            android:textColorHint="@color/colorDarkGray"
            android:textColor="@color/colorSaudi"
            android:gravity="right"
            android:background="@android:drawable/editbox_background"
            android:backgroundTint="@color/colorWhite"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="5dp"
            />

    </LinearLayout>



</RelativeLayout>