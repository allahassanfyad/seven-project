<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ScenarioSeven.Controllers.Activities.Sign_In"
    android:background="@drawable/background">


    <ImageView
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:src="@drawable/sevenlogo"
        android:layout_gravity="center"
        android:layout_marginTop="60dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="دخول المستخدمين"
        android:textColor="@color/colorSaudi"
        android:textStyle="bold"
        android:layout_marginBottom="10dp"
        android:textSize="20dp"/>

    <EditText
        android:id="@+id/editTextSignIn"
        android:layout_width="match_parent"
        android:layout_height="33dp"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="9dp"
        android:background="@android:drawable/editbox_background"
        android:backgroundTint="@color/colorWhite"
        android:gravity="right"
        android:hint="البريد الالكتروني"
        android:inputType="text"
        android:paddingRight="10dp"
        android:textColor="@color/colorBlack"
        android:textColorHint="@color/colorDarkGray" />

    <EditText
        android:id="@+id/editTextSignUp"
        android:layout_width="match_parent"
        android:layout_height="33dp"
        android:inputType="textPassword"
        android:hint="كلمة السر"
        android:paddingRight="10dp"
        android:textColorHint="@color/colorDarkGray"
        android:textColor="@color/colorBlack"
        android:gravity="right"
        android:background="@android:drawable/editbox_background"
        android:backgroundTint="@color/colorWhite"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginBottom="5dp"
        />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/textsignin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="تسجيل عضو جديد"
            android:textColor="@color/design_default_color_error"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="3dp"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layoutDirection="rtl">


        <TextView
            android:id="@+id/textsignin1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="نسيت كلمة السر"
            android:textColor="@color/design_default_color_error"
            android:layout_marginBottom="20dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="3dp"
            />

        </LinearLayout>

    </LinearLayout>


    <Button
        android:id="@+id/btnSignIn"
        android:layout_width="140dp"
        android:layout_height="35dp"
        android:text="دخول"
        android:background="@drawable/redus"
        android:backgroundTint="@color/colorSaudi"
        android:layout_gravity="center"
        android:textColor="@color/colorWhite"
        android:layout_marginBottom="10dp"/>





</LinearLayout>