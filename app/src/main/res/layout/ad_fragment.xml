<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/background">





    <LinearLayout
        android:id="@+id/relativeAccount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <androidx.cardview.widget.CardView
            android:id="@+id/view2"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="70dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:elevation="12dp"
            android:innerRadius="0dp"
            android:shape="ring"
            android:thicknessRatio="1.9"
            app:cardCornerRadius="40dp">

            <ImageView
                android:id="@+id/imgAccount"
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/vila" />


        </androidx.cardview.widget.CardView>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textAccountName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="15dp"
                android:text="alla"
                android:textColor="@color/colorSaudi"
                android:textSize="15dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textCharge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="15dp"
                android:text="الرصيد الحالي"
                android:textColor="@color/colorSaudi"
                android:textSize="15dp"
                android:textStyle="bold" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:layoutDirection="rtl"
                >



                <TextView
                    android:id="@+id/textAmount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" 1500"
                    android:layout_marginStart="75dp"
                    android:gravity="center"
                    android:textColor="@color/colorSaudi"
                    android:textSize="20dp"
                    android:textStyle="bold" />


                <ImageView
                    android:layout_width="42dp"
                    android:layout_height="42dp"
                    android:src="@drawable/ryal"
                    />




            </LinearLayout>

        </LinearLayout>



    </LinearLayout>




        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <EditText
                android:id="@+id/editTextAdTitle"
                android:layout_width="match_parent"
                android:layout_height="33dp"
                android:layout_marginRight="15dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="10dp"
                android:background="@android:drawable/editbox_background"
                android:backgroundTint="@color/colorWhite"
                android:gravity="right"
                android:hint="عنوان الاعلان (سيارة للبيع-عقار للبيع-الخ..)"
                android:inputType="text"
                android:paddingRight="10dp"
                android:textColor="@color/colorBlack"
                android:textColorHint="@color/colorDarkGray" />
            <EditText
                android:id="@+id/editTextAdAddPhoto"
                android:layout_width="match_parent"
                android:layout_height="33dp"
                android:inputType="text"
                android:hint="اضف صور او فيديو 45 ثانية "
                android:paddingRight="10dp"
                android:textColorHint="@color/colorDarkGray"
                android:textColor="@color/colorBlack"
                android:gravity="right"
                android:background="@android:drawable/editbox_background"
                android:backgroundTint="@color/colorWhite"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                />
            <EditText
                android:id="@+id/editTextAdDepartment"
                android:layout_width="match_parent"
                android:layout_height="33dp"
                android:inputType="text"
                android:hint="القسم"
                android:paddingRight="10dp"
                android:textColorHint="@color/colorDarkGray"
                android:textColor="@color/colorBlack"
                android:gravity="right"
                android:background="@android:drawable/editbox_background"
                android:backgroundTint="@color/colorWhite"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                />
            <EditText
                android:id="@+id/editTextAdPhone"
                android:layout_width="match_parent"
                android:layout_height="33dp"
                android:inputType="text"
                android:hint="05xxxxxxxxx"
                android:paddingRight="10dp"
                android:textColorHint="@color/colorDarkGray"
                android:textColor="@color/colorBlack"
                android:gravity="right"
                android:background="@android:drawable/editbox_background"
                android:backgroundTint="@color/colorWhite"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp" />
            <EditText
                android:id="@+id/editTextAdCity"
                android:layout_width="match_parent"
                android:layout_height="33dp"
                android:inputType="text"
                android:hint="المدينة"
                android:paddingRight="10dp"
                android:textColorHint="@color/colorDarkGray"
                android:textColor="@color/colorBlack"
                android:gravity="right"
                android:background="@android:drawable/editbox_background"
                android:backgroundTint="@color/colorWhite"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                />
            <EditText
                android:id="@+id/editTextAdDes"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:inputType="text"
                android:hint="وصف الاعلان"
                android:paddingRight="10dp"
                android:textColorHint="@color/colorDarkGray"
                android:textColor="@color/colorBlack"
                android:gravity="right"
                android:background="@android:drawable/editbox_background"
                android:backgroundTint="@color/colorWhite"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginBottom="5dp"
                android:singleLine="false"
                android:lines="4"
                />
            <Button
                android:id="@+id/btnAdEdit"
                android:layout_width="160dp"
                android:layout_height="35dp"
                android:layout_gravity="center"
                android:background="@drawable/redus"
                android:backgroundTint="@color/colorAllCities"
                android:layout_marginTop="5dp"
                android:text="أضف الاعلان"
                android:textSize="16dp"
                />
        </LinearLayout>
        </androidx.core.widget.NestedScrollView>

    </LinearLayout>

</LinearLayout>